<% provide(:title, 'Sign up') %>
<h1>Sign Up</h1>

<!-- 
	This is simple fields without a model or functionality
	For use with model check Listing 7.17
-->
<div class="row">
  <div class="span6 offset3">
    <%= form_tag do %>

      <%= label_tag :name %>
      <%= text_field_tag :name %>

      <%= label_tag :email %>
      <%= text_field_tag :email %>

      <%= label_tag :password %>
      <%= password_field_tag :password %>

      <%= label_tag :password_confirmation %>
      <%= password_field_tag :password_confirmation %>

      <%= submit_tag "Create my account", class: "btn btn-large btn-primary", disabled: true %>
    <% end %>
  </div>
</div>
